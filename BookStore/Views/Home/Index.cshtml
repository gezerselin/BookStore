@model IEnumerable<Book>
@{ ViewData["Title"] = "Home Page";
                int count = 0; }

<div class="row">
    @foreach (var book in Model)
    {
        @if (count != 0 && count % 3 == 0)
        {
        @:</div>
        @:<div class="row">
        }

             <div class="col-4">
        

                   <partial  name="_BookCard" model="@book" />

             </div>count++;
      }
</div>

<ul class="pagination">


    @for (int i = 1; i <= ViewBag.totalPages; i++)
    {
<li class="page-item"><a class="page-link" asp-action="Index" asp-controller="Home" asp-route-page="@i" asp-route-genreid="@ViewBag.GenreId">@i</a></li>}

</ul>
